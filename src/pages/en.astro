---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const bot = {
  name: "中英101",
  desc: "English-Chinese Translator",
  qr: "/qrcodes/中英101.png",
  lineLink: "https://lin.ee/4yy888Y",
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Line 101 Chat - English-Chinese Translator</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
        <!-- Language Switch Navigation -->
    <div style="text-align:right; font-size:1rem; margin:1rem;">
      <a href="/">中文</a> | <a href="/en">EN</a> | <a href="/ja">日本語</a> | <a href="/id">Indonesia</a> | <a href="/vi">Tiếng Việt</a>
    </div>
    <header style="text-align:center;padding:2rem 0;">
      <h1>Line 101 Chat - English-Chinese Translator</h1>
      <p>Easy to join, translate anytime. Scan the QR code below to add as a friend!</p>
    </header>
    <main style="display:flex;justify-content:center;gap:2rem;">
      <section style="border:1px solid #eee;padding:1.5rem 2rem;border-radius:1rem;min-width:240px;text-align:center;box-shadow:0 0 12px #eee;">
        <h2>{bot.name}</h2>
        <div>{bot.desc}</div>
        <img src={bot.qr} alt={`Add ${bot.name} on LINE`} style="width:180px;margin:1rem 0;" />
        <br />
        <a href={bot.lineLink} target="_blank" style="color:#06c;text-decoration:underline;font-weight:bold;">Official LINE page & Add Friend</a>
      </section>
    </main>
    <footer style="text-align:center;margin-top:3rem;">
      <small>© 2025 Line 101 Chat.</small>
    </footer>
  </body>
</html>
