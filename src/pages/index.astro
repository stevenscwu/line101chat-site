---
import Layout from '../layouts/Layout.astro';

const bots = [
  {
    name: "101chat",
    desc: "中印尼翻譯 / Indonesian-Chinese Translator",
    qr: "/qrcodes/101chat.png",
    lineLink: "https://lin.ee/dOjlRDM", 
  },
  {
    name: "Halo101",
    desc: "中越南翻譯 / Chinese-Vietnamese Translator",
    qr: "/qrcodes/Halo101.png",
    lineLink: "https://lin.ee/D5TMks7",
  },
  {
    name: "Nihon101",
    desc: "中日翻譯 / Chinese-Japanese Translator",
    qr: "/qrcodes/Nihon101.png",
    lineLink: "https://lin.ee/VmhK6a1",
  },
  {
    name: "中英101",
    desc: "中英翻譯 / English-Chinese Translator",
    qr: "/qrcodes/中英101.png",
    lineLink: "https://lin.ee/4yy888Y",
  },
];
---

<Layout>
  <div style="text-align:right; font-size:1rem; margin:1rem;">
    <a href="/">中文</a> | <a href="/en">EN</a> | <a href="/ja">日本語</a> | <a href="/id">Indonesia</a> | <a href="/vi">Tiếng Việt</a>
  </div>
  <header style="text-align:center;padding:2rem 0;">
    <h1>Line 101 Chat 多語翻譯聊天機器人</h1>
    <p>輕鬆加入，隨時翻譯。掃描下方 QR code 加入好友！</p>
  </header>
  <main style="display:flex;flex-wrap:wrap;justify-content:center;gap:2rem;">
    {bots.map(bot => (
      <section style="border:1px solid #eee;padding:1.5rem 2rem;border-radius:1rem;min-width:240px;text-align:center;box-shadow:0 0 12px #eee;">
        <h2>{bot.name}</h2>
        <div>{bot.desc}</div>
        <img src={bot.qr} alt={`Add ${bot.name} on LINE`} style="width:180px;margin:1rem 0;" />
        <br />
        <a href={bot.lineLink} target="_blank" style="color:#06c;text-decoration:underline;font-weight:bold;">官方LINE頁面 & 加入好友</a>
      </section>
    ))}
  </main>
  <footer style="text-align:center;margin-top:3rem;">
    <small>© 2025 Line 101 Chat.</small>
  </footer>
</Layout>
