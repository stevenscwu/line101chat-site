---
import Layout from '../layouts/Layout.astro';

const bot = {
  name: "Halo101",
  desc: "Dịch tiếng Trung-Việt / Chinese-Vietnamese Translator",
  qr: "/qrcodes/Halo101.png",
  lineLink: "https://lin.ee/D5TMks7",
};
---

<Layout>
  <div style="text-align:right; font-size:1rem; margin:1rem;">
    <a href="/">中文</a> | <a href="/en">EN</a> | <a href="/ja">日本語</a> | <a href="/id">Indonesia</a> | <a href="/vi">Tiếng Việt</a>
  </div>
  <header style="text-align:center;padding:2rem 0;">
    <h1>Line 101 Chat - Chatbot Dịch tiếng Trung-Việt</h1>
    <p>Tham gia dễ dàng, dịch mọi lúc. Quét mã QR bên dưới để thêm bạn!</p>
  </header>
  <main style="display:flex;justify-content:center;gap:2rem;">
    <section style="border:1px solid #eee;padding:1.5rem 2rem;border-radius:1rem;min-width:240px;text-align:center;box-shadow:0 0 12px #eee;">
      <h2>{bot.name}</h2>
      <div>{bot.desc}</div>
      <img src={bot.qr} alt={`Thêm ${bot.name} trên LINE`} style="width:180px;margin:1rem 0;" />
      <br />
      <a href={bot.lineLink} target="_blank" style="color:#06c;text-decoration:underline;font-weight:bold;">Trang LINE chính thức & Thêm bạn</a>
    </section>
  </main>
  <footer style="text-align:center;margin-top:3rem;">
    <small>© 2025 Line 101 Chat.</small>
  </footer>
</Layout>
